<?xml version="1.0" encoding="UTF-8"?>
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.watcher.merge_send</string>
  <key>ProgramArguments</key>
  <array>
    <string>__PROJECT_PATH__/.venv/bin/watcher-merge</string>
  </array>
  <key>EnvironmentVariables</key>
  <dict>
    <key>PATH</key>
    <string>/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin</string>
  </dict>
  <key>StartInterval</key>
  <integer>600</integer> <!-- Каждые 10 минут -->
  <key>RunAtLoad</key>
  <true/>
  <key>StandardOutPath</key>
  <string>__PROJECT_PATH__/logs/merge_stdout.log</string>
  <key>StandardErrorPath</key>
  <string>__PROJECT_PATH__/logs/merge_stderr.log</string>
</dict>
</plist>