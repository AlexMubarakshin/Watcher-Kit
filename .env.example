# Telegram Bot Configuration
# Get these from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Camera Configuration
# Options:
#   - Specific device index (0, 1, 2, etc.)
#   - "auto" for automatic selection (prefers external cameras)
# Use: ffmpeg -f avfoundation -list_devices true -i "" to list available devices
CAMERA_DEVICE=auto

# Video Recording Settings
# Frames per second (common values: 15, 24, 30, 60)
FPS=24

# Video resolution (common formats: 640x480, 1280x720, 1920x1080)
RESOLUTION=1280x720

# Recording duration in seconds (55 = 55 second clips to avoid overlap)
DURATION=55

# Timestamp overlay settings
# Show timestamp on video (true/false)
SHOW_TIMESTAMP=true

# Timestamp position (top-left, top-right, bottom-left, bottom-right)
TIMESTAMP_POSITION=top-right

# Timestamp font size (pixels)
TIMESTAMP_FONT_SIZE=24

# Telegram file size limit in MB (default: 20MB)
MAX_FILE_SIZE_MB=20

# Person Detection Settings
# Enable person detection during video capture (true/false)
ENABLE_PERSON_DETECTION=false

# Detection confidence threshold (0.0 to 1.0)
PERSON_DETECT_CONFIDENCE=0.5

# Cooldown between detection alerts in seconds
PERSON_DETECT_COOLDOWN=10

# Maximum age of screenshots in hours before cleanup
PERSON_DETECT_MAX_AGE_HOURS=24

# Telegram rate limiting (seconds between screenshot sends)
TELEGRAM_SCREENSHOT_DELAY=3

# Telegram batch settings for large detection batches
# Number of screenshots to send before applying batch timeout
TELEGRAM_BATCH_SIZE=5

# Timeout in seconds between batches of screenshots (to prevent overwhelming Telegram)
TELEGRAM_BATCH_TIMEOUT=30

# Debug Settings
# Show live preview window during video capture (true/false)
CAPTURE_DEBUG_PREVIEW=false
